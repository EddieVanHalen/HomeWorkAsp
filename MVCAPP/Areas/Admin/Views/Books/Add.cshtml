@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MVCAPP.Areas.Admin.Models.BookRequest

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1 class="text-center mt-3">Add</h1>

<form method="post" asp-controller="Books" asp-action="AddAction" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label style="cursor:pointer;" asp-for="Title"></label>
        <input type="text" class="form-control my-2" asp-for="Title">
        <span style="color:red" asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label style="cursor:pointer;" asp-for="Genre"></label>
        <input type="text" class="form-control my-2" asp-for="Genre">
        <span style="color:red" asp-validation-for="Genre"></span>
    </div>

    <div class="form-group mt-5 mb-5">
        <input asp-for="ImageFile" type="file" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
