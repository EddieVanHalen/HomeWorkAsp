@model SongDTO

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<style>
    .card-img-top {
        display: block;
        margin: 0 auto;
    }
    
    a:hover{
        cursor: pointer;
    }
</style>

<div class="container-fluid d-flex justify-content-center align-items-center full-page mt-5">
    <div class="card text-center p-5 border-0">
        <img class="card-img-top w-50 text-center" src="@Model.ImageUrl" alt="Card image cap">
        <h1 class="display-4">@Model.Title</h1>
        <a class="h-25" asp-controller="Artists" asp-action="Details" asp-route-id="@Model.ArtistId">@Model.ArtistName</a>
    </div>
</div>